<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net5.0;netstandard2.0;net481</TargetFrameworks>
    <RootNamespace>siof.Common</RootNamespace>
    <PackageLicenseUrl>https://github.com/siof/common.notifyobject/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/siof/common.notifyobject</PackageProjectUrl>
    <Copyright>siof</Copyright>
    <RepositoryUrl>https://github.com/siof/common.notifyobject</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags />
    <Authors>siof</Authors>
    <Company />
    <Product />
    <Version>1.2.0</Version>
    <Description>Simple library with NotifyObject class implementing INotifyPropertyChanged for easy use in MVVM projects</Description>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <LangVersion>default</LangVersion>
    <PackageVersion>1.2.0</PackageVersion>
    <Title>Common.NotifyObject</Title>
    <PackageReleaseNotes>
      1.1.0 - Added .net 5.0 target, Merged PR with SourceLink support
      1.2.0 - Added CallerMemberName to OnPropertyChanged(string) method and raised .net framework version to 4.8.1
    </PackageReleaseNotes>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0" PrivateAssets="All" />
  </ItemGroup>


</Project>
